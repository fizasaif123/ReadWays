<%- include('partials/head') %>


<div class="container">
    <h1 class="text-center mb-4">Add a Book</h1>

    <form action="/books" method="POST">
        <div class="form-group">
            <label for="title">Book Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Book title" required>
        </div>

        <div class="form-group">
            <label for="author">Author Name</label>
            <input type="text" class="form-control" id="author" name="author" placeholder="Author name" required>
        </div>

        <div class="form-group">
            <label for="biography">Author Biography</label>
            <textarea class="form-control" id="biography" name="biography" placeholder="Author biography" rows="4" required></textarea>
        </div>

    

        <div class="form-group">
            <label for="isbn">ISBN</label>
            <input type="text" class="form-control" id="isbn" name="isbn" placeholder="ISBN" required>
        </div>

        <div class="form-group">
            <label for="genre">Select Genre</label>
            <select class="form-control" id="genre" name="genre" required>
                <% for(let genre of genres){ %>
                <option value="<%=genre%>"><%=genre%></option>
                <% } %>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

